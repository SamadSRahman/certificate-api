<!-- views/certificate.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Certificate of Completion</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Arial', sans-serif;
      background-color: #fff;
    }
    .certificate {
      width: 100%;
      max-width: 1000px;
      margin: 0 auto;
      padding: 40px;
      position: relative;
      box-sizing: border-box;
    }
    .border-outer {
      border: 15px solid #d4af37;
      padding: 20px;
    }
    .border-inner {
      border: 2px solid #000;
      padding: 50px;
      text-align: center;
    }
    .title {
      font-size: 48px;
      font-weight: bold;
      margin-bottom: 30px;
      color: #000;
    }
    .subtitle {
      font-size: 24px;
      margin-bottom: 20px;
      color: #000;
    }
    .name {
      font-size: 42px;
      font-weight: bold;
      margin: 20px 0;
      color: #d4af37;
    }
    .dealer {
      font-size: 24px;
      margin-bottom: 20px;
      color: #000;
    }
    .completion {
      font-size: 24px;
      margin-bottom: 70px;
      color: #000;
    }
    .footer {
      display: flex;
      justify-content: space-between;
      margin-top: 50px;
    }
    .date, .company {
      font-size: 24px;
      color: #000;
    }
    .completion > span{
      color: #d4af37;
      font-style: italic;
    }
  </style>
</head>
<body>
  <div class="certificate">
    <div class="border-outer">
      <div class="border-inner">
        <div class="title">Certificate of Completion</div>
        <div class="subtitle">This is to certify that</div>
        <div class="name"><%= name %></div>
        <div class="dealer"><%= dealerName %> - <%= dealerCode %></div>
        <div class="completion">has successfully completed <span><%= assessmentName %></span></div>
        <div class="footer">
          <div class="date"><%= date %></div>
          <div class="company"><%= companyName %></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>